<Window x:Class="CSVtoDataBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVtoDataBase"
        mc:Ignorable="d"
        FontFamily="Consolas"
        Title="Преобразование CSV файлов интернет банкинга БелАпб" Height="450" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="StackPanelGridColumn" Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <GridSplitter Grid.Column="1" ShowsPreview="False" Width="4" HorizontalAlignment="Center"/>
        <DockPanel Grid.Column="0" Grid.Row="0" LastChildFill="True">
            <TextBlock Text="Файлы выписок:" DockPanel.Dock="Top" Margin="10 5 10 5"/>
            <TextBox x:Name="tbFilesCSV" DockPanel.Dock="Top"
                     TextWrapping="Wrap"
                     MinWidth="400"
                     Margin="10 5 10 5"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     MouseDoubleClick="TbWm_MouseDoubleClick" 
                     ToolTip="Двойной клик - для выбора файла на диске"/>
        </DockPanel>

        <DockPanel Grid.Column="2" Grid.Row="0" LastChildFill="True">
            <StackPanel DockPanel.Dock="Top">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Название базы данных:" Margin="10 10 10 5" DockPanel.Dock="Left"/>
                    <TextBox x:Name="TbNameDataBase"
                    HorizontalContentAlignment="Stretch"
                    VerticalAlignment="Center" Margin="10 5 10 5"/>
                    <!-- GotKeyboardFocus="TbWm_GotKeyboardFocus" LostKeyboardFocus="TbWm_LostKeyboardFocus"-->
                </DockPanel>
                <Button x:Name="BtnUpdateDataBase" Content="Обновить базу данных." 
                    Margin="10 5 10 5"
                    Click="BtnUpdateDataBase_Click"
                    ToolTip="Создаёт SQL скрипт файл из банковских выписок."/>
            </StackPanel>
        </DockPanel>

        <DockPanel Grid.Row="1" Grid.ColumnSpan="3">
            <StatusBar  DockPanel.Dock="Bottom" Height="20">
                <DockPanel LastChildFill="True">
                    <ProgressBar x:Name="PbProgress" DockPanel.Dock="Left"
                                 Minimum="0" Maximum="4" Value="0"
                                 Margin="10 0 5 0"
                                 MinWidth="100"
                                 MinHeight="15"/>
                    <TextBlock x:Name="TblProgressText" 
                               Margin="20 0 10 0"/>
                </DockPanel>
            </StatusBar>
            <TabControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                <TabItem Header="Income">Данные таблицы Income.</TabItem>
                <TabItem Header="Expenses">Данные таблицы Expenses.</TabItem>
                <TabItem Header="Reports">Данные таблицы выписок.</TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
